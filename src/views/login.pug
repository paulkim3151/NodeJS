extends base

block content
	form(method="POST")
		input(name="username", type="text", required, placeholder="Username", autofocus)
		input(name="password", type="password", required, placeholder="Password")
		input(type="submit", value="Join")
		include partials/social-login
	div.auth-switch
		span Don't have an account? 
		a(href="/join") Create now! &rarr;