extends base.pug

block content
	div#videoContainer
		video(src="/"+video.fileUrl, controls, style='width:90%')
		div
			button#play Play
			button#mute Mute
			div
				span#currentTime 00:00
				span  / 
				span#totalTime 00:00
				input(type="range", step="0.1", value="0.5", min="0", max="1")#volume.video-controls
			div
				input(type="range", step="1", value="0", min="0")#timeline.video-controls
			div
				button#fullScreen Enter Full Screen
	//-
		div
			p=video.description
			small=video.createdAt
		div
			small Uploaded by 
				a(href=`/users/${video.owner._id}`)=video.owner.name
		each tag in video.hashtags
			small(style="margin-left: 5px")=tag
		h3 #{video.meta.views} #{video.views === 1 ? "view" : "views" }
		if String(video.owner._id) === String(loggedInUser._id)
			button(onclick=`location.href='${video.id}/edit'`) Edit
			button(onclick=`if(confirm("정말로 삭제하시겠습니까?")){location.href='${video.id}/delete'}`) Delete

block scripts
	script(src="/static/js/videoPlayer.js")